.title11 {
	padding-left: 6%;
	margin-top: 5%;
	margin-bottom: 2%;
	font-size: 0.94 rem;
	color: #526580;
	padding-bottom: 2%;
	font-weight: bold;
}
.text-lable {
	display: inline-block;
	/*padding: 3px 20px;*/
	/*HYY-text-lable宽度增加*/
	width: 80%;
}
.text-text {
	display: inline-block;
}
*[cid="hide-item"] {
	display: none;
}
.tianxieyijian {
	display: none;
	position: fixed;
	top: 0;
	width: 100%;
	height: 100%;
	left: 100%;
	background-color: #fff;
	z-index: 100;
}
.tianxieyijian ul {
	display: block;
	padding: 11px;
	background-color: #e8ecee;
	border-bottom: 2px #c8ccdc solid;
}
.tianxieyijian ul li {
	display: inline-block;
	width: 33%;
	text-align: center;
	padding: 7px 0;
}
.tianxieyijian ul li a {
	display: inline-block;
	border: 2px #c8ccdc solid;
	background-color: #fff;
	border-radius: 5px;
	text-decoration: none;
	width: 80%;
	padding: 12px 0;
	padding-right: 11px;
	/*text-align: right;*/
	font-size: 18px;
	color: #c8ccdc;
	position: relative;
	text-indent: 30px;
}
.tianxieyijian ul li a:before {
	content: '√';
	display: block;
	position: absolute;
	top: 50%;
	left: 11px;
	margin-top: -11px;
	width: 20px;
	height: 20px;
	border: 1.5px #c8ccdc solid;
	color: #c8ccdc;
	border-radius: 13px;
	text-align: center;
	line-height: 20px;
	text-indent: 0;
}
.tianxieyijian ul li a.checked {
	color: #fff;
	background-color: #0c6cff;
	border-color: #0c6cff;
}
.tianxieyijian ul li a.checked:before {
	color: #fff;
	border-color: #fff;
}
.write-message textarea {
	display: block;
	width: 90%;
	/*border: none;*/
	padding: 11px 7px;
	resize: none;
	color: #555;
	margin: auto;
	margin-top: 10px;
}
.todo-submit {
	position: absolute;
	width: 100%;
	bottom: 0;
	background-color: #0c6cff;
	height: 51px;
}
.attachment-item .icon {
	width: 15%;
	text-align: center;
	display: inline-block;
	float: none;
}
.attachment-item {
	padding-bottom: 7px;
}