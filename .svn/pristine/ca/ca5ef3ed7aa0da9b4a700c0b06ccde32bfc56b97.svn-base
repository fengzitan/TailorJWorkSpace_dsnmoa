.write-advice>h4,.choice-path>h4{
	padding: 11px 0;
	color: #fff;
	background-color: #4E89ED;
	text-indent: 30px;
	border-bottom: 1px solid #ccc;
}
.choice-path ul{
	padding: 7px 11px;
	text-indent: 30px;
	/*border-bottom: 1px #ccc solid;*/
}
.choice-path ul>li{
	/*outline: 1px #ccc solid;*/
	padding: 11px 0;
	margin-top: 7px;
	position: relative;
	box-shadow: 0 0 0 1px #ccc;
	border-radius: 3px;
}
.choice-path ul>li.checked{
	background-color: #00ADFF;
	color: #fff; 
}
.choice-path ul>li:after{
	content: '';
	display:block;
	position: absolute;
	right: 11px;
	top: 50%;
	margin-top:-6px; 
	width: 12px;
	height: 12px;
	border-top:2px #ccc solid; 
	border-right:2px #ccc solid;
	transform:rotate(45deg);
	-ms-transform:rotate(45deg); /* IE 9 */
	-moz-transform:rotate(45deg); /* Firefox */
	-webkit-transform:rotate(45deg); /* Safari and Chrome */
	-o-transform:rotate(45deg); /* Opera */
}
.choice-path ul>li.checked:after{
	border-color:#fff; 
}
.write-advice{
	margin-bottom: 11px;
}
.write-advice textarea{
	width: 90%;
	border: none;
	resize: none;
	border: 1px #ccc solid;
	margin-left: 4%;
	margin-top: 21px;
	height: 160px;
	padding: 1%;
}
.common-select{
	display: block;
	margin-top: 11px;
	margin-left: 4%;
	width: 92%;
	outline: 1px #ccc solid;
	text-indent: 11px;
	padding: 7px 0;
	position: relative;
}
.common-select:after{
	content: '';
	display:block;
	position: absolute;
	right: 11px;
	top: 50%;
	margin-top:-16px; 
	width: 16px;
	height: 16px;
	border-top:2px #ccc solid; 
	border-right:2px #ccc solid;
	transform:rotate(135deg);
	-ms-transform:rotate(135deg); /* IE 9 */
	-moz-transform:rotate(135deg); /* Firefox */
	-webkit-transform:rotate(135deg); /* Safari and Chrome */
	-o-transform:rotate(135deg); /* Opera */
}
.common-option{
	position: absolute;
	width: 100%;
	top: 100%;
	outline: 1px #ccc solid;
	background: #fff;
	max-height: 216px;
	overflow-x:hidden;
	overflow-y:auto;
}
.common-option ul>li{
	padding: 7px 0;
	border-bottom: 1px #eee solid; 
}
.common-option ul>li.checked{
	background-color:#9C9C9C;
	color: #fff; 
}
.choice-person{
	top: 10%;
	position: fixed;
	z-index: 299;
	width: 94%;
	left: 3%;
	height: 80%;
	background-color: #fff;
	box-shadow: 0 0 3px #ccc;
	display: none;
}
.cover{
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	background-color: rgba(0,0,0,.5);
	display: none;
	z-index: 10;
}
.choice-person h4{
	height: 40px;
	line-height: 40px;
	background-color: #4E89ED;
	color:#fff;
	font-weight: normal;
	text-align: center;
}
.person-subject{
	position: absolute;
	display: block;
	width: 100%;
	top: 40px;
	left: 0;
	bottom: 60px;
	overflow-x: hidden;
	overflow-y: auto;
}
.person-btns{
	position: absolute;
	display: block;
	background-color: #F0F0F0;
	width: 100%;
	height: 60px;
	bottom: 0;
	left: 0;
}
.person-btns .cansle,.person-btns .sure{
	position: absolute;
	display: block;
	height: 40px;
	line-height: 40px;
	padding: 0 30px;
	top:10px;
}
.person-btns .cansle{
	background-color: #DCDCDC;
	color: #9B9B9B;
	left: 20px;
}
.person-btns .sure{
	background-color: #4E89ED;
	color: #fff;
	right: 20px;
}
.person-subject li{
	position: relative;
	padding: 11px 21px;
	padding-left: 30px; 
	color: #777;
}
.person-subject div{
	padding-left:30px; 
	background-color: #ddd;
}
.person-subject .root{
	background-color: #fff;
	border-bottom: 1px #ccc solid;	
}
.person-subject li:before{
	content: '';
	display: block;
	position: absolute;
	width: 18px;
	height: 18px;
	background-color: #fff;
	border-radius:3px;
	top: 50%;
	margin-top: -9px;
	left: 5px;
	text-align: center;
	box-shadow: 0 0 1px #00f;  
}
.person-subject li.checked:before{
	content: '√';
	display: block;
	position: absolute;
	width: 18px;
	height: 18px;
	background-color: #fff;
	border-radius:3px;
	top: 50%;
	margin-top: -9px;
	left: 5px;
	text-align: center;
	color : #4E89ED;
	box-shadow: 0 0 1px #00f;
}
.person-subject li.loading:after{
	content: '';
    display: block;
    position: absolute;
    width: 20px;
    height: 20px;
    top: 50%;
    margin-top: -10px;
    right: 20px;
    background: url('../../img/winloading.GIF');
    background-size: 20px 20px;
    overflow: hidden;
}
.person-subject .check-btn{
	position: absolute;
	display: block;
	width: 60px;
	height: 100%;
	z-index: 10;
	top: 0;
	left: 0;
}
.person-subject li.checked.radio:before{
	content: '√';
	display: block;
	position: absolute;
	width: 18px;
	height: 18px;
	background-color: #fff;
	border-radius:12px;
	top: 50%;
	margin-top: -9px;
	left: 5px;
	text-align: center;
	color : #4E89ED;
	box-shadow: 0 0 1px #00f;
}
.person-subject li.radio:before{
	content: '';
	display: block;
	position: absolute;
	width: 18px;
	height: 18px;
	background-color: #fff;
	border-radius:12px;
	top: 50%;
	margin-top: -9px;
	left: 5px;
	text-align: center;
	box-shadow: 0 0 1px #00f;  
}
*[disabled="disabled"]{
	background-color:rgb(235, 235, 228);
}
.submit-btn{
	height: 100%;
	text-align: center;
	font-size: 20px;
	color: #fff;
	line-height: 48px;
    background-color: #0c6cff;
}