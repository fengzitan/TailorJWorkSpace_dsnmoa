@charset "utf-8";
/*全局设置*/
html{font-size:16px;}
body{width:100%; "微软雅黑";}
a{text-decoration: none}
*{margin: 0 auto;padding: 0;}
img{width: 100%}
/*局部设置*/
.top_nav {
    width: 100%;
	height: 3rem;
	line-height: 3rem;
    background-color: #2b3849;
    text-align: center;
    position: relative;
    display: inline-block;
    color: #ffffff;
    font-size: 1.4rem;
}
.top_nav .top_left {
	position: absolute;
    width: 3rem;
	height: 3rem;
    left: 0;
    top: 0;
	text-align: center;
}
.top_nav .top_left img {
	width: .8rem;
	vertical-align: middle;
}
.top_nav .top_right {
    position: absolute;
	width: 3rem;
	height: 3rem;
	right: 0;
	top: 0;
	text-align: center;
}
.top_nav .top_right img {
	width: 1.4rem;
	height: 1.4rem;
	vertical-align: middle;
}
.top_right span {
    margin-top: 0.2rem;
    width: 22px;
    display: inline-block;
    margin-right: 1rem;
}

.main_check {
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    background-color: #e8ecee;
    color: #a8b3bf;
    position: relative;
}
.form_type {
    position: relative;
}
.form_type li {
    display: inline-block;
    width: 23%;
    padding: 0.7rem 0;
    text-align: center;
    font-size: 1.3rem;
    border-right: 1px solid #cfd9df;
    border-bottom: 1px solid #cfd9df;
}
.form_type .type_fff {
    background-color: #ffffff;
    border-bottom: 0px;
    position: relative;
   /* top: 1px;
    left: -2px; */
}
.mail_l {
    position: absolute;
    width: 14px;
    left: 0;
    top: 0;
    bottom: 0;
    padding: 0 0.5rem;
    background-color: #f4f5f6;
    display: none;
}
.mail_r {
    position: absolute;
    width: 14px;
    right: 0;
    top: 0px;
    bottom: 0;
    background-color: #f4f5f6;
    padding: 0 0.5rem;
}
.mail_l span {
    position: relative;
    top: 13px;

}
.mail_r span {
    position: relative;
    top: 13px;
}
.content_text {
	position: absolute;
	width: 100%;
	top: 6rem;
	left: 0;
	overflow: hidden;
}
.content_text .wd {
	position: relative;
	height: inherit;
}
/*文本内容*/
.ma {
    border-bottom: 1px solid #e4e9ec;
    width: 100%;
    position: relative;
}
.com {
    width: 83%;
    margin: 0 auto;
    padding: 0.7rem 0;
    padding-right: 7%;
}
.com .tit {
    font-size: 1rem;
    color: #74859c;
    padding-bottom: 5px;
    /*overflow: hidden;*/
    /*white-space: nowrap;*/
   position: relative;
}
.com .name {
    display: inline-block;
    color: #a7b3c3;
}
.name img {
    width: 0.9rem;
    position: relative;
    top: 1px;
}
.name span {
    font-size: 1rem;
}
.com .time {
    display: inline-block;
    color: #a7b3c3;
    padding-left: 1rem;
    font-size: 1rem;
}
.time img {
    width: 0.9rem;
    position: relative;
    top: 1px;
}
.time span {
    font-size: 1rem;
}
.ma .com_less_go {
    position: absolute;
    top: 30px;
    right: 7px;
    width: 9px;
}
.tit .s_a {
    overflow: hidden;
    white-space: nowrap;
    width: 88%;
    display: inline-block;
    margin-right: 10px;
}
.s_b {
    width: 14px;
    display: inline-block;
    position: absolute;
    right: 12%;
    margin-top: -0.5rem;
}
#unread .num {
    background-color: rgba(255,0,0,0.7);
    font-size: 0.75rem;
    display: inline-block;
    position: absolute;
    max-width: 1.6rem;
    border-radius: 1rem;
    line-height: 1rem;
    color: #ffffff;
    top: 7px;
    right: 0.2rem;
    overflow: hidden;
    text-overflow: ellipsis;
    min-width: 1rem;
    padding: 0 2px;
}

.seek_page {
    font-size: 0;
    width: 100%;
    background-color: #ffffff;
    position: absolute;
    top: 60px;
    display: none;
    z-index: 90;
}
.seek_page .seek_1 {
    height: 3rem;
    font-size: 1rem;
    width: 84%;
    margin-left: 4%;
    border: 0;
    outline: none;
}
.seek_page .right {
    width: 16px;
    display: inline-block;
    height: 3rem;
    line-height:66px;
    float: right;
    padding-right: 4%;
    background-color: #ffffff;
}
.wic {
    display: none;
    position: fixed;
    z-index: 80;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0,0,0,0.2);
}
.ui-input-text.ui-body-inherit.ui-corner-all.ui-shadow-inset {
    display: inline-block;
    width: 84%;
}
