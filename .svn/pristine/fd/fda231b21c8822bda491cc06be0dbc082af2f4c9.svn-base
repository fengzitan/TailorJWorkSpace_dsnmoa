@charset "utf-8";
/*全局设置*/
html {
    font-size: 62.5%;
}
* {
    margin: 0 auto;
    padding: 0;
}
img {
    width: 100%;
}
body {
    max-width: 750px;
    font-family: "微软雅黑";
}

.header {
	width: 100%;
	background-color: #2b3849;
	text-align: center;
	position: relative;
	height: 48px;
	top: 0;
	z-index: 1000;
}
#main{
	display: block;
	width: 100%;
	color: #74859c;
}
.back {
	display: inline-block;
	position: absolute;
	left: 10px;
	width: 13px;
	padding: 1.2rem 0;
}
.header .title {
	display: inline-block;
	font-size: 1.8rem;
	color: #ffffff;
	padding: 1rem 0;
	position: relative;
	top: -2px;
	font-family: '微软雅黑';
}
.tit {
	font-size: 2rem;
	text-align: center;
	padding-top: 1rem;
	padding-bottom: 20px;
	border-bottom: 1px solid #74859c;
	width: 94%;
	margin-left: 3%;
}
.h {
	font-size: 2rem;
	color: #74859c;
}
.name {
	display: inline-block;
	color: #a7b3c3;
	font-size: 0.9rem;
}
.time {
	display: inline-block;
	color: #a7b3c3;
	padding-left: 1rem;
	font-size: 0.9rem;
}
.name img {
	width: 13px;
}
.time img {
	width: 13px;
}
.con {
	width: 90%;
	margin: 0 auto;
	font-size: 1.6rem;
	color: #74859c;
}
.con p {
	text-indent: 2em;
	padding: 1rem 0;
}
.im {
	vertical-align: middle;
	width: 25px;
}
.message {
	width: 100%;
	margin: 0 auto;
	height: 4rem;
	border-top: 1px solid #e4e9ec;
	line-height: 4rem;
	color: #435977;
}
.ppt {
	display: inline-block;
}
.exa {
	display: inline-block;
	float: right;
	height: 4rem;
	line-height: 4rem;
}
.con .p_one {
	display: inline-block;
	margin-left: 62%;
}