@charset "utf-8";
/*全局设置*/
html {
    font-size: 62.5%;
}
* {
    margin: 0 auto;
    padding: 0;
}
img {
    width: 100%;
}
body {
    max-width: 750px;
    font-family: "微软雅黑";
}
a {
    text-decoration: none;
}
.header {
    width: 100%;
    background-color: #2b3849;
    text-align: center;
    height: 4rem;
    line-height: 4rem;
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
}
.back {
    display: inline-block;
    width: 13px;
    line-height: 4rem;
    float: left;
    padding: 0 1rem;
    position: relative;
    top: 1.2rem;
    z-index: 2;
}
.title {
    display: inline-block;
    font-size: 1.8rem;
    color: #ffffff;
    position: relative;
    line-height: 4rem;
}
.filtrate {
    display: inline-block;
    font-size: 1.5rem;
    color: #ffffff;
    background-color: #0c6cff;
    padding: 0 1rem;
    float: right;
    height: 4rem;
    line-height: 4rem;
}
.com {
    margin: 0 auto;
    padding: 1rem 0;
    border-bottom: 1px solid #e5e5e5;
}
/*.ma{border-bottom: 1px solid #e4e9ec;}*/
.tit {
    font-size: 1.8rem;
    color: #435e82;
    padding-bottom: 3px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}/*文本溢出用...代替，3行代码顺序不能改变*/
.name {
    margin-left: 6px;;
    display: inline-block;
    background-color: red;
    width: 7px;
    height: 7px;
    border-radius: 100%;
    vertical-align: middle;
}
.time {
    display: inline-block;
    color: #a7b3c3;
    vertical-align: middle;
}
.name img {
    width: 13px;
}
.time img {
    width: 13px;
}
/*#mess{display: none}*/
/*筛选页面*/
.he {
    width: 100%;
    background-color: #0c6cff;
    height: 4rem;
    padding-left: 5%;
}
.menu_head {
    font-size: 1.5rem;
    color: #ffffff;
    line-height: 3rem;
    position: relative;
    top: 5px;
}
.close {
    position: absolute;
    right: 30%;
    font-size: 2rem;
}
.list {
    width: 90%;
    margin: 0 auto;
}
.list ul li {
    list-style: none;
    padding: 1rem 0;
    color: #74859c;
    border-bottom: 1px solid #e4e9ec;
    font-size: 1.5rem
}
.list ul li img {
    width: 1.5rem;
    vertical-align: middle;
    color: #74859c;
    padding-right: 1rem;
}
.menu {
    position: absolute;
    transition: 0.5s;
    -webkit-transition: 0.5s;
    width: 100%;
    right: -100%;
    top: 0;
    z-index: 11;
    overflow: hidden;
    height: inherit;
    min-height: 100%;
    display: none;
    background-color: #ffffff;
}
.list .byclass li, .list .bytime li, .list .bydepartment li {
    border: 1px #fff solid;
    height: inherit;
    padding: 5px 0 5px 3rem;
    margin-top: -1px;
}
.list .byclass li:last-child, .list .bytime li:last-child, .list .bydepartment li:last-child {
    border-bottom: 1px solid #e4e9ec;
    padding-bottom: 20px;
}
body {
    position: relative;
    z-index: 1;
    overflow-x: hidden;
}

.mask {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0,0,0,0.2);
    z-index: 10;
}
.tab {
    text-align: center;
    font-size: 1.8rem;
    color: #a7b3c3;
    position: relative;
    z-index: 1;
    margin-top: 48px;
}
.tab .ann {
    display: inline-block;
    width: 50%;
    padding: 1rem 0;
}
.tab .mess {
    display: inline-block;
    width: 50%;
    background-color: #dedddd;
    padding: 1rem 0;
}

.list ul li p {
    padding: 0.8rem 2.5rem;
}