@charset "utf-8";

div#panel {
	position: relative;
	width: 100%;
	height: inherit;
	overflow: hidden;
}
.header {
	width: 100%;
	background-color: #2b3849;
	height: 3rem;
	line-height: 3rem;
	text-align: center;
	position: absolute;
	top: 0;
	left: 0;
}
.header .context {
	position: relative;
	width: inherit;
	height: inherit;
	line-height: inherit;
}
.title {
	display: inline-block;
	font-size: 1.4rem;
	color: #ffffff;
}
.back {
	display: inline-block;
	position: absolute;
	left: 10px;
	top: .9rem;
	width: .8rem;
	height: 1.2rem;
}
.exit {
	display: inline-block;
	position: absolute;
	right: 10px;
	top: .7rem;
	width: 1.6rem;
	height: 1.6rem;
}
/* 导航栏置左Button绘制域 */
.top-l-btn {
	position: absolute;
	top: 0;
	left: 0;
	width: 3rem;
	height: 3rem;
	font-size: 1.4rem;
	color: #fff;
}
/* 导航栏置右Button绘制域 */
.top-r-btn {
	position: absolute;
	top: 0;
	right: 0;
	width: 3rem;
	height: 3rem;
	font-size: 1.4rem;
	color: #fff;
}
.main {
	position: absolute;
	top: 3rem;
	left: 0;
	width: inherit;
	overflow-x: hidden;
	overflow-y: auto;
}
.message{
	position: relative;
	height: 3.8rem;
	line-height: 3.8rem;
	padding: 0 .6rem;
	border-bottom: 1px solid #e5e5e5;
}
.im {
	position: absolute;
	display: inline-block;
	top: .9rem;
	width: 2rem;
	height: 2rem;
}
.message .name {
	display: inline-block;
	position: relative;
	left: 3rem;
	font-size: 1.2rem;
	color: #74859c;
	font-weight: bold;
}
.into {
	width:.6rem;
	height: 1.2rem;
	display:inline-block;
	position: relative;
	top: 1.3rem;
	float: right;
}
.footer {
	background-color: #2b3849;
	font-size: 0;
	width: inherit;
	height: 4rem;
	text-align: center;
	position: fixed;
	bottom: 0;
}
.a ul li {
	width: 24.68%;
	display: inline-block;
	margin: 0.6rem 0;
}
.new {
	font-size: 1rem;
	color: #abafb3;
}
.one {
	width: 20px;
}
.in {
	width: 19%;
	padding: 1rem 0;
	text-align: center;
}
.in img {
	width: 23px;
	padding-top: 0.5rem;
}
.index2 {
	font-size: 0.9rem;
	color: #ffffff;
}
.a {
	position: relative;
	bottom: 0;
}
.b {
	position: absolute;
	top: -25px;
	background-color: #0c6cff;
	padding: 1rem 0;
	border-radius: 30px 30px 0 0;
	width: 19%;
}
.nu {
	background-color: #ff3e3e;
	font-size: 1rem;
	display: inline-block;
	position: absolute;
	padding: 0 0.5rem;
    border-radius: 1rem;
	top: 2px;
	left: 12%;
	line-height: 1.5rem;
	color: #ffffff;
}
/* 全屏视图 */
.fullwin-frame {
	z-index: 100;
	display: none;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	border: 0;
	background-color: #fff;
}